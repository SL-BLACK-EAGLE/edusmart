<AnchorPane fx:id="loginFormContext" prefHeight="460.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.axs.edu.controller.LoginFormController">
   <children>
      <ImageView fitHeight="462.0" fitWidth="282.0" pickOnBounds="true">
         <image>
            <Image url="@../assets/security/login-bg.png" />
         </image>
      </ImageView>
      <TextField fx:id="txtEmail" layoutX="304.0" layoutY="113.0" prefHeight="31.0" prefWidth="333.0" promptText="Root Email" />
      <PasswordField fx:id="txtPassword" layoutX="304.0" layoutY="180.0" prefHeight="31.0" prefWidth="333.0" promptText="Password" />
      <Label layoutX="304.0" layoutY="60.0" text="Login">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button layoutX="304.0" layoutY="251.0" mnemonicParsing="false" onAction="#signInOnAction" prefHeight="31.0" prefWidth="333.0" style="-fx-background-color: #0D99FF;" text="Sign In" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button layoutX="304.0" layoutY="360.0" mnemonicParsing="false" onAction="#createAnAccountOnAction" prefHeight="31.0" prefWidth="333.0" style="-fx-background-color: #34495E;" text="Create an Account" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
      <Label layoutX="453.0" layoutY="317.0" text="OR">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
